{
  "name": "Smart SpellCheck",
  "description": "Extension created to check spell errors, gramatical erros and disable send message button",
  "version": "3.0",
  "manifest_version": 3,
  "background": {
    "service_worker": "background.js"
  },

  "action": {
    "default_popup": "popup.html",
    "default_icon": "images/logo.png"
  },

  "update_url": "https://automation.teleperformance.com.br/ext/loreal/v3/smartspellcheck.xml",

  "permissions": [
    "nativeMessaging",
    "storage",
    "declarativeContent",
    "activeTab",
    "scripting",
    "tabs"
  ],
  "icons": {
    "16": "/images/logo.png",
    "32": "/images/logo.png",
    "48": "/images/logo.png",
    "128": "/images/logo.png"
  },
  "host_permissions": [ "https://*/*" ]
}